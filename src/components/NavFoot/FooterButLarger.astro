---
import { Icon } from "astro-icon/components";
import { version } from "../../../package.json";
const link = `https://github.com/CDzungx/Prozekt-Resovel/wiki/v${version}`;
import SvelteDebug from "@components/NavFoot/SvelteDebug.svelte";
---

<footer
   class="footer static bottom-0 flex h-fit w-full flex-shrink-0 flex-col gap-0 border-t-[1px] border-gray-400 bg-base-300 font-trebuchet text-base-content">
   <p class="m-0 block w-full bg-base-200 px-3 py-2 text-center text-xs text-red-950 dark:text-yellow-100/80">
      You must give appropriate credit when copy and redistribute this article (assets & content), and you must not use
      it for any commercial purpose.<br />
      CDzungx ©️ All rights reserved
   </p>
   <div
      class="flex h-32 w-full flex-row items-center justify-around gap-4 px-0 text-base md:gap-9 md:px-10 md:text-base lg:gap-20">
      <div class="flex flex-col gap-2">
         <span class="white">Version:&nbsp;<span class="badge badge-primary">{version}</span></span>
         <a class="text-pink-700 hover:underline dark:text-red-400" href={link}>Changelog</a>
         <a class="text-pink-700 hover:underline dark:text-red-400" href="https://github.com/CDzungx/Prozekt-Resovel"
            >Source Code</a
         >
      </div>
      <div class="block">
         <div class="flex grid-flow-col">
            <button
               onclick="debugModal.showModal();"
               id="modalButton"
               class="tooltip"
               data-tip="Debug"
               aria-label="Debug">
               <div class="box-border">
                  <Icon name="ph:code-fill" class="h-9 w-9" />
               </div></button
            >
            <SvelteDebug client:visible />
            <a
               href="/privacypolicy"
               class="tooltip md:ml-4 lg:ml-5"
               data-tip="Privacy Policy"
               target="_blank"
               aria-label="Privacy Policy">
               <div class="s box-border">
                  <Icon name="ic:baseline-privacy-tip" class="h-9 w-9" />
               </div>
            </a>
            <a href="https://github.com/CDzungx/" class="tooltip" data-tip="Github" target="_blank" aria-label="Github">
               <div class="box-border">
                  <Icon name="mdi:github" class="h-9 w-9 md:mx-4 lg:mx-5" />
               </div>
            </a>

            <a href="/discord" class="tooltip" data-tip="Discord" target="_blank" aria-label="Discord">
               <div class="box-border">
                  <Icon name="ic:outline-discord" class="h-9 w-9" />
               </div>
            </a>
         </div>
      </div>
   </div>
   <p class="m-0 block w-full bg-base-300 px-3 py-2 text-center text-sm text-red-950 dark:text-white">
      Powered by <a href="https://astro.build/" target="_blank" class="font-black text-orange-700 hover:underline"
         >Astro</a
      >
   </p>
</footer>
