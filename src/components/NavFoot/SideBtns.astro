---
import { Icon } from 'astro-icon/components';
import DarkSwitch from '@components/NavFoot/DarkSwitch';
import LanguageSelectIcon from '@components/NavFoot/LanguageSelectIcon.svelte';
---

<div class="sideBtns relative">
   <div
      class="fixed z-[9999] ml-2 mt-2 flex min-w-fit flex-col rounded-xl bg-white/40 p-3 backdrop-blur-3xl backdrop-brightness-75 backdrop-opacity-80 backdrop-saturate-200 md:ml-4 md:mt-4">
      <!--<a
         href="/vnlanding"
         aria-label="Back link"
         class="tooltip tooltip-right mb-3 hidden duration-300 ease-in-out hover:scale-110 md:flex"
         data-tip="Back">
         <button aria-label="Back" class="backBtn btn btn-circle">
            <Icon name="mdi:arrow-left-bold-outline" class="flex h-8 w-8" />
         </button>
      </a> -->

      <a
         href="/"
         aria-label="Home link"
         class="tooltip tooltip-right duration-300 ease-in-out hover:scale-110"
         data-tip="Homepage">
         <button aria-label="Back" class="backBtn btn btn-circle">
            <Icon name="mdi:home-outline" class="flex h-8 w-8" />
         </button>
      </a>

      <div class="tooltip tooltip-right duration-300 ease-in-out hover:scale-110" data-tip="Darkmode">
         <button aria-label="Darkmode Switch" class="btn btn-circle my-3 md:my-3">
            <DarkSwitch client:only="solid-js" />
         </button>
      </div>

      <button
         aria-label="Language Switch"
         class="tooltip tooltip-right h-12 w-12 duration-300 ease-in-out hover:scale-110"
         data-tip="Language">
         <LanguageSelectIcon client:only="svelte" />
      </button>
   </div>
</div>
