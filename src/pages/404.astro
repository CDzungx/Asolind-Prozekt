---
import { ViewTransitions } from 'astro:transitions';
import logo from '@assets/img/404fav.svg';
import '@fontsource/bungee-shade';
import thumb404 from '@assets/img/404thumbnail.png';
---

<!doctype html>
<html lang="en">
   <head>
      <meta charset="UTF-8" />
      <meta name="description" content="A project made of Astro, SolidJS, Svelte, React, TailwindCSS" />
      <meta name="viewport" content="width=device-width, initial-scale=1.0" />
      <meta property="og:url" content="https://prozekt-resovel.vercel.app" />
      <meta property="og:type" content="website" />
      <meta property="og:site_name" content="Prozekt Resovel" />
      <meta property="og:title" content="Prozekt Resovel" />
      <meta property="og:description" content="A project made of Astro, SolidJS, Svelte, React, TailwindCSS" />
