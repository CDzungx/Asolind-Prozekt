   <body class="flex h-[100dvh] items-center justify-center bg-stone-900 text-center text-slate-100">
      <main class="flex h-full w-full flex-col justify-center gap-0 md:flex-row md:gap-10 lg:gap-16">
         <a href="/" class="btn absolute left-4 top-4 rounded-lg bg-zinc-800 text-gray-200 hover:text-black">Homepage</a
         >
         <div class="flex items-center justify-center">
            <figure class="mb-6 md:mb-0">
               <img
                  src={logo.src}
                  alt="Site Logo"
                  class="-mt-28 aspect-square h-52 w-52 md:mt-0 md:h-64 md:w-64 lg:h-80 lg:w-80"
               />
            </figure>
         </div>
         <div class="hidden items-center justify-center md:flex">
            <div class="h-32 border-2 border-gray-400 lg:h-36"></div>
         </div>
         <div class="flex flex-col items-center justify-center">
            <div class="mb-5 font-bungee text-8xl">404</div>
            <div class="font-mono text-2xl md:text-3xl">Whatcha doin here eh?</div>
         </div>
         <div
            class="fixed -bottom-32 right-3 flex h-44 w-36 items-center justify-center transition-all duration-300 hover:bottom-0">
