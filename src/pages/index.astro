---
import '@fontsource/lobster';
import '@fontsource/carter-one';
import 'animate.css/animate.min.css';
import { Icon } from 'astro-icon/components';
import UnderlineText from '@components/items/misc/UnderlineText.astro';
import Footer from '@components/NavFoot/Footer.astro';
import DarkSwitch from '@components/NavFoot/DarkSwitch';
import MainLayout from '@layouts/MainLayout.astro';
import { $blogIsEnglish } from '@store/DataStore';
let curLang = $blogIsEnglish ? 'vi' : 'en';
const blogLink = `/blog/${curLang}`;
---

<MainLayout title="Prozekt Resovel">
   <main class="flex w-screen flex-1 bg-center">
      <div class="absolute right-4 top-4 md:right-6 md:top-5">
         <DarkSwitch client:only="solid-js" />
      </div>
      <div class="flex w-full flex-col items-stretch md:grid md:grid-cols-8 md:grid-rows-1">
         <div
            class="col-span-5 flex flex-col items-center justify-center bg-orange-700 pb-14 pt-20 text-center font-carter text-6xl font-extrabold text-base-100 dark:bg-orange-900 dark:text-white md:pb-0 md:pt-0 md:text-7xl lg:text-8xl">
            <span id="title" data-textify>Prozekt Resovel</span>
            <div
               class="mt-10 flex gap-2 rounded-2xl bg-white p-2 opacity-80 bg-blend-lighten contrast-150 dark:bg-opacity-80 md:gap-3 lg:gap-5">
               <Icon name="vscode-icons:file-type-astro" />
               <Icon name="vscode-icons:file-type-svelte" />
               <Icon name="devicon:solidjs" />
               <Icon name="vscode-icons:file-type-reactjs" />
               <Icon name="vscode-icons:file-type-tailwind" />
            </div>
         </div>
         <div class="mx-14 block rounded-md border-4 border-white align-middle md:hidden"></div>
         <div
            class="subbg col-span-3 flex h-full items-center justify-center bg-center font-carter text-3xl font-bold text-orange-800 dark:text-white md:text-4xl">
            <ul transition:name="vnindex" transition:animate="slide">
               <li class="w-fit">
                  <a href="/vietnam"><UnderlineText text="Project Vietnam" /></a>
               </li>
               <li class="my-8 w-fit">
                  <a href={blogLink}><UnderlineText text="Blog" /></a>
               </li>
               <li class="w-fit">
                  <a href="https://github.com/users/CDzungx/projects/2/views/3"><UnderlineText text="Roadmap" /></a>
               </li>
            </ul>
         </div>
      </div>
   </main>

   <Footer />

   <style type="text/css" is:global>
      .subbg {
         background: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' width='128' height='128' opacity='0.1' fill='none'%3e%3cdefs%3e%3cradialGradient id='a' cx='64' cy='61.6' r='42.1' gradientUnits='userSpaceOnUse'%3e%3cstop offset='0' stop-color='%23ab0000'/%3e%3cstop offset='1' stop-color='%23450000'/%3e%3c/radialGradient%3e%3cradialGradient id='b' cx='64.04' cy='94.58' r='20.5' gradientUnits='userSpaceOnUse'%3e%3cstop offset='0' stop-color='%23cd0000'/%3e%3cstop offset='1' stop-color='%236c0000'/%3e%3c/radialGradient%3e%3c/defs%3e%3cpath fill='url(%23a)' d='M50.4 78.5a75.1 75.1 0 0 0-28.5 6.9l24.2-65.7c.7-2 1.9-3.2 3.4-3.2h29c1.5 0 2.7 1.2 3.4 3.2l24.2 65.7s-11.6-7-28.5-7L67 45.5c-.4-1.7-1.6-2.8-2.9-2.8-1.3 0-2.5 1.1-2.9 2.7L50.4 78.5Zm-1.1 28.2Z' paint-order='fill'/%3e%3cpath fill='url(%23b)' d='m65.42 75.86 4.6 10.49A2.4 2.4 0 0 0 72 87.78l11.2 1a1.54 1.54 0 0 1 .86 2.64l-8.44 7.09a2.4 2.4 0 0 0-.81 2.35l2.45 11.48a1.54 1.54 0 0 1-2.24 1.63l-9.78-5.73a2.4 2.4 0 0 0-2.43 0l-9.78 5.72a1.55 1.55 0 0 1-2.24-1.62l2.45-11.49a2.41 2.41 0 0 0-.8-2.34L44 91.42c-.91-.89-.4-2.45.86-2.63l11.2-1a2.4 2.4 0 0 0 1.99-1.44l4.6-10.49a1.55 1.55 0 0 1 2.77 0Z'/%3e%3c/svg%3e")
            no-repeat center;
         background-size: 25rem;
      }
   </style>
   <script>
      import Textify from 'textify.js';
      import gsap from 'gsap';
      import FontFaceObserver from 'fontfaceobserver';
      const font = new FontFaceObserver('Carter One');

      font.load().then(() => {
         new Textify(
            {
               el: '#title',
               animation: {
                  stagger: 0.025,
                  duration: 0.3,
                  ease: 'expo.inOut',
                  animateProps: { opacity: 0, scale: 0 },
               },
            },
            gsap,
         );
      });
   </script>
</MainLayout>
