---
import AnimatedStartBtn from "../components/animate/AnimatedStartBtn";
import "animate.css/animate.min.css";
---

<main class="m-auto max-w-fit p-8">
  <div class="content-center items-center space-y-4">
    <div id="mainTitle" class="text-6xl font-extrabold md:text-7xl lg:text-8xl">
      <div id="typed-strings">
        <p class="hidden md:flex lg:flex">
          Projekt Vietnam <span class="grid place-items-center">‚≠ê</span>
        </p>
      </div>
      <span id="startTyped" class="inline-flex md:flex lg:flex"></span>
    </div>
    <br/>
    <AnimatedStartBtn client:idle>
  </div>
</main>

<script>
  import Typed from "typed.js";
  var typed = new Typed("#startTyped", {
    stringsElement: "#typed-strings",
    typeSpeed: 35,
    showCursor: false,
    onComplete: (self) => {
      const startButton = document.querySelector("#landingButton");
      startButton.classList.remove("invisible");
      startButton.classList.add("animate__animated", "animate__backInLeft");
    },
  });
</script>
